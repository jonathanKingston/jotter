<!DOCTYPE html>
<html>

  {% include head.liquid %}

  <body>

    {% include header.liquid %}

    <div class="page-content">
      <div class="wrapper">
        <article class="post" itemscope itemtype="http://schema.org/BlogPosting">
        
          <header class="post-header">
            <h1 class="post-title" itemprop="name headline">{{ page.title }}</h1>
            <p class="post-meta">
              {% if page.published_date %}
              <time datetime="{{ page.published_date }}" itemprop="datePublished">{{ page.published_date | date: "%b %-d, %Y" }}</time>
              {% endif %}
              {% if page.author %} â€¢ <span itemprop="author" itemscope itemtype="http://schema.org/Person"><span itemprop="name">{{ page.author }}</span></span>{% endif %}
            </p>
          </header>
        
          <div class="post-content" itemprop="articleBody">
            {{ page.content }}
          </div>
        
        </article>
      </div>
    </div>

    {% include footer.liquid %}

  </body>

</html>
