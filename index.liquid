layout: default.liquid
title: "Jonathan Kingston"
---
<div class="home">
  <h1 class="page-heading">Posts</h1>
  <ul class="post-list">
  {% for post in collections.posts.pages %}
    <li>
    {% if post.published_date %}
    <span class="post-meta">{{ post.published_date | date: "%b %-d, %Y" }}</span>
    {% endif %}
  
    <h2>
      <a class="post-link" href="{{ post.permalink }}">{{ post.title }}</a>
    </h2>
    </li>
  {% endfor %}
  </ul>

  <p class="rss-subscribe">subscribe <a href="{{ "/feed.xml" | prepend: site.base_url }}">via RSS</a></p>

</div>
